{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2020"
    ] ,
    "jsx": "react",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/**/*"]
}